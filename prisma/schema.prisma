generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  weight         Float
  shipping       String
  description    String
  sku            String
  price          String
  stock          String
  videoLink      String
  img            String[]
  category       String
  type           String
  specifications Json
  createdAt      DateTime        @default(now())
}

 
model Category {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String   @unique
  type String
  img  String[]
}
